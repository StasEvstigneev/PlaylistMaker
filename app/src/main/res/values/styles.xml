<?xml version="1.0" encoding="utf-8"?>

<resources>


    <style name="FragmentLayout">
        <item name="android:background">?attr/colorSecondary</item>
    </style>

    <style name="MainActivityLayout">
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="HeaderStyle">
        <item name="android:paddingVertical">@dimen/header_padding_vertical</item>
        <item name="android:paddingStart">@dimen/header_padding_start</item>
        <item name="android:paddingEnd">@dimen/header_padding_end</item>
    </style>

    <style name="HeaderIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_margin">@dimen/icon_return_margin</item>
    </style>

    <style name="HeadingOfActivities">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical|start</item>
        <item name="android:layout_marginTop">@dimen/heading_margin_top</item>
        <item name="android:layout_marginStart">@dimen/heading_margin_start</item>
        <item name="android:layout_marginBottom">@dimen/heading_margin_bottom</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/font_size_heading</item>
        <item name="android:lineHeight">@dimen/font_line_height_heading</item>
        <item name="android:fontWeight">@dimen/font_weight_button</item>
        <item name="android:textColor">?attr/textAppearanceBody1</item>
    </style>


    <style name="ToolbarTitle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/font_size_heading</item>
        <item name="android:lineHeight">@dimen/font_line_height_heading</item>
        <item name="android:fontWeight">@dimen/font_weight_button</item>
        <item name="android:textColor">?attr/textAppearanceBody1</item>
    </style>


    <style name="BigButtonMainActivity" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/margin_horizontal_button</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingHorizontal">@dimen/padding_horizontal_button</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/font_size_heading</item>
        <item name="android:lineHeight">@dimen/font_line_height_heading</item>
        <item name="android:fontWeight">@dimen/font_weight_button</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">@dimen/corner_radius_button</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding_button_end</item>
        <item name="iconSize">@dimen/icon_size_button</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="SettingsItemsLayout">
        <item name="android:paddingStart">@dimen/lists_padding_start</item>
        <item name="android:paddingTop">@dimen/lists_padding_top</item>
        <item name="android:paddingEnd">@dimen/lists_padding_end</item>
        <item name="android:paddingBottom">@dimen/lists_padding_bottom</item>
    </style>

    <style name="ThemeSettings">
        <item name="android:paddingStart">@dimen/lists_padding_start</item>
        <item name="android:paddingTop">@dimen/lists_padding_top</item>
        <item name="android:paddingEnd">@dimen/lists_padding_end</item>
        <item name="android:paddingBottom">@dimen/lists_padding_bottom</item>
    </style>


    <style name="SettingsItemsText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginEnd">@dimen/lists_heading_margin_end</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/font_size_regular</item>
        <item name="android:lineHeight">@dimen/font_line_height_regular</item>
        <item name="android:fontWeight">@dimen/font_weight_regular</item>
        <item name="android:textColor">?attr/textAppearanceBody1</item>
    </style>

    <style name="SettingsItemsIcons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>

    </style>

    <style name="SettingsSwitchIcon">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginEnd">6dp</item>
        <item name="android:paddingStart">9dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="thumbTint">@color/selector_switch_thumb</item>
        <item name="trackTint">@color/selector_switch_track</item>

    </style>

    <style name="EditTextSearchField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:layout_marginVertical">@dimen/et_search_field_margin_vertical</item>
        <item name="android:layout_marginHorizontal">@dimen/et_search_field_margin_horizontal</item>
        <item name="android:background">@drawable/et_search_field</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:paddingStart">@dimen/et_search_field_padding_start</item>
        <item name="android:paddingVertical">@dimen/et_search_field_padding_vertical</item>
        <item name="android:hint">@string/search</item>
        <item name="android:textColorHint">?attr/hintTextColor</item>
        <item name="android:textColor">?attr/editTextColor</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/font_size_regular</item>
        <item name="android:lineHeight">@dimen/font_line_height_regular</item>
        <item name="android:drawableStart">@drawable/ic_search_icon</item>
        <item name="android:drawablePadding">@dimen/icon_padding_button_end</item>
        <item name="android:textCursorDrawable">@drawable/ic_cursor_search</item>

    </style>


    <style name="ProgressBar">
        <item name="android:layout_width">@dimen/progressBar_size</item>
        <item name="android:layout_height">@dimen/progressBar_size</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:indeterminateTint">@color/blue</item>
    </style>


    <style name="TrackArtwork">
        <item name="android:layout_width">@dimen/track_artwork_width</item>
        <item name="android:layout_height">@dimen/track_artwork_height</item>
        <item name="android:layout_gravity">center_vertical|start</item>
        <item name="android:layout_marginVertical">@dimen/track_artwork_marginVertical</item>
        <item name="android:layout_marginStart">@dimen/track_artwork_marginStart</item>
        <item name="android:layout_marginEnd">@dimen/track_artwork_marginEnd</item>

    </style>

    <style name="TrackName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_marginBottom">@dimen/trackName_margin_bottom</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:lineHeight">@dimen/font_line_height_trackName</item>
        <item name="android:textColor">?attr/textAppearanceBody1</item>
        <item name="android:textSize">@dimen/font_size_trackName</item>

    </style>

    <style name="TrackArtistAndTime">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:lineHeight">@dimen/font_line_height_artistName</item>
        <item name="android:textColor">?attr/textAppearanceBody2</item>
        <item name="android:textSize">@dimen/font_size_artistName</item>

    </style>

    <style name="TrackArrowForward">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical|end</item>
        <item name="android:layout_marginStart">@dimen/track_arrowforward_marginStart</item>
        <item name="android:layout_marginEnd">@dimen/track_arrowforward_marginEnd</item>
        <item name="android:src">@drawable/ic_arrow_forward</item>

    </style>

    <style name="SearchErrorMessage">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/error_placeholder_marginTop</item>
        <item name="android:drawablePadding">@dimen/error_message_drawablePadding</item>
        <item name="android:layout_marginHorizontal">@dimen/error_message_marginHorizontal</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/error_message_textSize</item>
        <item name="android:lineHeight">@dimen/error_message_lineHeight</item>
        <item name="android:textColor">?attr/textAppearanceBody1</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="RefreshButtonSearch" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_gravity">center|top</item>
        <item name="android:layout_marginTop">@dimen/refresh_button_marginTop</item>
        <item name="android:backgroundTint">?attr/textAppearanceBody1</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/refresh_button_font_size</item>
        <item name="android:lineHeight">@dimen/refresh_button_line_height</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="cornerRadius">@dimen/refresh_button_corner_radius</item>

    </style>

    <style name="YouSearchedForMessage">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/youSearchedMessage_marginBottom</item>
        <item name="android:paddingTop">@dimen/youSearchedMessage_paddingTop</item>
        <item name="android:paddingBottom">@dimen/youSearchedMessage_paddingBottom</item>
        <item name="android:layout_marginHorizontal">@dimen/youSearchedMessage_paddingHorizontal
        </item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/youSearchedMessage_textSize</item>
        <item name="android:lineHeight">@dimen/youSearchedMessage_lineHeight</item>
        <item name="android:textColor">?attr/textAppearanceBody1</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="ClearHistoryButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_gravity">center|top</item>
        <item name="android:layout_marginVertical">@dimen/clearHistoryButton_marginTop</item>
        <item name="android:paddingVertical">@dimen/clearHistoryButton_paddingVertical</item>
        <item name="android:paddingHorizontal">@dimen/clearHistoryButton_paddingHorizontal</item>
        <item name="android:backgroundTint">?attr/textAppearanceBody1</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/clearHistoryButton_font_size</item>
        <item name="android:lineHeight">@dimen/clearHistoryButton_line_height</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="cornerRadius">@dimen/clearHistoryButton_corner_radius</item>

    </style>


    <style name="AudioPlayerTrackName">
        <item name="android:gravity">start</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/audio_player_trackName_fontSize</item>
        <item name="android:lineHeight">@dimen/audio_player_trackName_fontLineHeight</item>
        <item name="android:textColor">?attr/textAppearanceBody1</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="layout_constrainedWidth">true</item>

    </style>

    <style name="AudioPlayerArtistName">
        <item name="android:gravity">start</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/audio_player_artistName_fontSize</item>
        <item name="android:lineHeight">@dimen/audio_player_artistName_fontLineHeight</item>
        <item name="android:textColor">?attr/textAppearanceBody1</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="layout_constrainedWidth">true</item>

    </style>

    <style name="AudioPlayerTrackTimeRemaining">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/audio_player_artistName_fontSize</item>
        <item name="android:lineHeight">@dimen/audio_player_artistName_fontLineHeight</item>
        <item name="android:textColor">?attr/textAppearanceBody1</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="layout_constrainedWidth">true</item>

    </style>


    <style name="AudioPlayerTrackDataItems">
        <item name="android:gravity">start</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/audio_player_trackDataItem_fontSize</item>
        <item name="android:lineHeight">@dimen/audio_player_trackDataItem_fontLineHeight</item>
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginEnd">44dp</item>
        <item name="android:paddingTop">@dimen/audio_player_trackDataItem_paddingTop</item>
        <item name="android:paddingBottom">@dimen/audio_player_trackDataItem_paddingBottom</item>

    </style>

    <style name="AudioPlayerTrackData">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/audio_player_trackDataItem_fontSize</item>
        <item name="android:lineHeight">@dimen/audio_player_trackDataItem_fontLineHeight</item>
        <item name="android:textColor">?attr/textAppearanceBody1</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">end</item>
        <item name="android:paddingTop">@dimen/audio_player_trackDataItem_paddingTop</item>
        <item name="android:paddingBottom">@dimen/audio_player_trackDataItem_paddingBottom</item>
        <item name="layout_constrainedWidth">true</item>

    </style>


    <style name="TabLayout">
        <item name="android:background">?attr/colorSecondary</item>

    </style>


    <style name="TabLayoutTextAppearance">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/tab_text_font_size</item>
        <item name="android:lineHeight">@dimen/tab_text_line_height</item>
        <item name="android:fontWeight">@dimen/tab_text_font_weight</item>
        <item name="android:textAllCaps">false</item>

    </style>


    <style name="FavoriteTracksErrorMessage">
        <item name="android:layout_marginTop">@dimen/favorites_error_placeholder_marginTop</item>
        <item name="android:drawablePadding">@dimen/favorites_error_placeholder_drawablePadding</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/error_message_textSize</item>
        <item name="android:lineHeight">@dimen/error_message_lineHeight</item>
        <item name="android:fontWeight">@dimen/error_message_font_weight</item>
        <item name="android:textColor">?attr/textAppearanceBody1</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="NewPlaylistButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_marginTop">@dimen/new_playlist_button_marginTop</item>
        <item name="android:backgroundTint">?attr/textAppearanceBody1</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/new_playlist_button_font_size</item>
        <item name="android:lineHeight">@dimen/new_playlist_button_line_height</item>
        <item name="android:fontWeight">@dimen/new_playlist_button_font_weight</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="cornerRadius">@dimen/new_playlist_button_corner_radius</item>

    </style>

    <style name="PlaylistsErrorMessage">
        <item name="android:layout_marginTop">@dimen/playlists_error_placeholder_marginTop</item>
        <item name="android:drawablePadding">@dimen/playlists_error_placeholder_drawablePadding</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/error_message_textSize</item>
        <item name="android:lineHeight">@dimen/error_message_lineHeight</item>
        <item name="android:fontWeight">@dimen/error_message_font_weight</item>
        <item name="android:textColor">?attr/textAppearanceBody1</item>
        <item name="android:textAlignment">center</item>
    </style>


    <style name="BottomNavTextActive">
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/bottom_nav_text_font_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineHeight">@dimen/bottom_nav_text_line_height</item>
        <item name="android:fontWeight">@dimen/bottom_nav_text_font_weight</item>
        <item name="android:maxLines">1</item>

    </style>

    <style name="BottomNavTextInactive">
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/bottom_nav_text_font_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineHeight">@dimen/bottom_nav_text_line_height</item>
        <item name="android:fontWeight">@dimen/bottom_nav_text_font_weight</item>
        <item name="android:maxLines">1</item>

    </style>



</resources>
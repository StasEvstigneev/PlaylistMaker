<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivTrackArtWork"
        style="@style/TrackArtwork"
        tools:src="@drawable/img_trackplaceholder" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTrackName"
            style="@style/TrackName"
            tools:text="Yesterday (Remastered 2009) ryrryryпerвyryевyrtyrнвенаену">

        </TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|start"
            android:layout_marginTop="1dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvArtistName"
                style="@style/TrackArtistAndTime"
                android:drawableEnd="@drawable/ic_artistnamedivider"
                tools:text="The Beatles" />

            <TextView
                android:id="@+id/tvTrackTime"
                style="@style/TrackArtistAndTime"
                tools:text="2:55" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_arrowForward"
        style="@style/TrackArrowForward">

    </ImageView>


</LinearLayout>
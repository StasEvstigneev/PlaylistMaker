<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/playlist_grid_layout_margin">
    
    <ImageView
        style="@style/PlaylistCoverGridLayout"
        android:id="@+id/playlistCoverGrid"
        android:background="@drawable/background_corners_8dp"
        android:clipToOutline="true"
        tools:src="@drawable/img_trackplaceholder" />

    <TextView
        style="@style/PlaylistTextAppearanceGridLayout"
        android:id="@+id/playlistTitleGrid"
        tools:text="Best songs 2024"/>

    <TextView
        style="@style/PlaylistTextAppearanceGridLayout"
        android:id="@+id/playlistTracksQuantityGrid"
        tools:text="98 треков"/>


</LinearLayout>